--source include/load_sysvars.inc

# Wait for all the connections from previous tests except
# the default one to be completedly disconnected
let $count_sessions= 1;
--source include/wait_until_count_sessions.inc

flush privileges;

SELECT @@GLOBAL.per_user_session_var_default_val;

--echo ## create non-super users tao1, tao2, and tao3
create user tao1@localhost;
create user tao2@localhost;
create user tao3@localhost;

--echo ## create super users tao4 and tao5
grant all privileges on *.* to tao4@localhost identified by password '' with grant option;
grant all privileges on *.* to tao5@localhost identified by password '' with grant option;

flush user_resources;

--echo ##
--echo ## (1) Initial non-empty values
--echo ##
let $i=1;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ##
--echo ## (2) DEFAULT values
--echo ##
SET GLOBAL per_user_session_var_default_val = DEFAULT;
SELECT @@GLOBAL.per_user_session_var_default_val;

inc $i;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ##
--echo ## (3) NULL
--echo ##
SET GLOBAL per_user_session_var_default_val = NULL;
SELECT @@GLOBAL.per_user_session_var_default_val;

inc $i;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ##
--echo ## (4) Empty string
--echo ##
SET GLOBAL per_user_session_var_default_val = "";
SELECT @@GLOBAL.per_user_session_var_default_val;

inc $i;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ##
--echo ## (5) New non-empty string
--echo ##
SET GLOBAL per_user_session_var_default_val="tao1:tx_isolation=SERIALIZABLE,tao2:tao3:gap_lock_raise_error=0,root:gap_lock_write_log=0,tao4:big_tables=1,auto_increment_increment=12345,long_query_time=123.45,tao5:gap_lock_raise_error=0,gap_lock_write_log=0";
SELECT @@GLOBAL.per_user_session_var_default_val;

inc $i;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ##
--echo ## (6) Restored initial non-empty values
--echo ##
SET @@global.per_user_session_var_default_val = @original_val;
SET @@global.per_user_session_var_default_val = "tao2:tao3:root:tx_isolation=read-committed,gap_lock_raise_error=0,gap_lock_write_log=0,big_tables=1,tao1:gap_lock_raise_error=0,gap_lock_write_log=0,auto_increment_increment=12345,long_query_time=123.45";
SELECT @@global.per_user_session_var_default_val;

inc $i;
--source per_user_session_var_conn_create.inc
--source per_user_session_var_print.inc

--echo ## disconnect all the connections
while ($i>0) {
  let $j=1;
  while ($j<=5) {
    disconnect con_tao_$i$j;
    inc $j;
  }
  disconnect con_root_$i;
  dec $i;
}

connection default;

--echo ## drop all the users
drop user tao1@localhost;
drop user tao2@localhost;
drop user tao3@localhost;
drop user tao4@localhost;
drop user tao5@localhost;

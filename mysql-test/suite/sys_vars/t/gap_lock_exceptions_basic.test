#                                                                              #
################################################################################

--source include/load_sysvars.inc

###########################################################
#           START OF gap_lock_exceptions TESTS            #
###########################################################


###########################################################################
#   Saving initial value of gap_lock_exceptions in a temporary variable   #
###########################################################################

SET @start_value = @@global.gap_lock_exceptions;

--echo '#---------------------FN_DYNVARS_004_01-------------------------#'
############################################### 
#     Verify default value of variable        #
############################################### 

SET @@global.gap_lock_exceptions = DEFAULT;
SELECT @@global.gap_lock_exceptions, length(@a) = '';


--echo '#--------------------FN_DYNVARS_004_02------------------------#'
#######################################################################
#      Change the value of gap_lock_exceptions to a invalid value     #
#######################################################################

--error ER_WRONG_TYPE_FOR_VAR
SET @@global.gap_lock_exceptions = 12;

--echo '#----------------------FN_DYNVARS_004_03------------------------#'
############################################################################## 
# Check if the value in GLOBAL Tables matches values in variable             #
##############################################################################

SELECT @@global.gap_lock_exceptions = VARIABLE_VALUE 
FROM INFORMATION_SCHEMA.GLOBAL_VARIABLES 
WHERE VARIABLE_NAME='gap_lock_exceptions';

SET @@global.gap_lock_exceptions= @start_value;
#####################################################
#       END OF gap_lock_exceptions TESTS            #
#####################################################


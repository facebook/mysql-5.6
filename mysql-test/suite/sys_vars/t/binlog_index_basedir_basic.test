

################## mysql-test\t\binlog_index_basedir_basic.test ############################
#                                                                             #
# Variable Name: binlog_index_basedir                                                 #
# Scope: Global                                                               #
# Access Type: Static                                                         #
# Data Type: filename                                                         #
###############################################################################

--echo '#---------------------BS_STVARS_001_01----------------------#'
####################################################################
#   Displaying default value                                       #
####################################################################
SELECT COUNT(@@GLOBAL.binlog_index_basedir);
--echo 0 Expected


--echo '#---------------------BS_STVARS_001_02----------------------#'
####################################################################
#   Check if Value can set                                         #
####################################################################

--error ER_INCORRECT_GLOBAL_LOCAL_VAR
SET @@GLOBAL.binlog_index_basedir=1;
--echo Expected error 'Read only variable'

SELECT COUNT(@@GLOBAL.binlog_index_basedir);
--echo 0 Expected




--echo '#---------------------BS_STVARS_001_03----------------------#'
#################################################################
# Check if the value in GLOBAL Table matches value in variable  #
#################################################################

SELECT VARIABLE_VALUE = ''
FROM INFORMATION_SCHEMA.GLOBAL_VARIABLES
WHERE VARIABLE_NAME='binlog_index_basedir';
--echo 1 Expected

SELECT COUNT(@@GLOBAL.binlog_index_basedir);
--echo 0 Expected

SELECT COUNT(VARIABLE_VALUE)
FROM INFORMATION_SCHEMA.GLOBAL_VARIABLES
WHERE VARIABLE_NAME='binlog_index_basedir';
--echo 1 Expected



--echo '#---------------------BS_STVARS_001_04----------------------#'
################################################################################
#  Check if accessing variable with and without GLOBAL point to same variable  #
################################################################################
SELECT @@binlog_index_basedir is NULL AND @@GLOBAL.binlog_index_basedir is NULL;
--echo 1 Expected



--echo '#---------------------BS_STVARS_001_05----------------------#'
################################################################################
#   Check if binlog_index_basedir can be accessed with and without @@ sign                  #
################################################################################

SELECT COUNT(@@binlog_index_basedir);
--echo 0 Expected

--Error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT COUNT(@@local.binlog_index_basedir);
--echo Expected error 'Variable is a GLOBAL variable'

--Error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT COUNT(@@SESSION.binlog_index_basedir);
--echo Expected error 'Variable is a GLOBAL variable'

SELECT COUNT(@@GLOBAL.binlog_index_basedir);
--echo 0 Expected

--Error ER_BAD_FIELD_ERROR
SELECT binlog_index_basedir = @@SESSION.binlog_index_basedir;
--echo Expected error 'Readonly variable'



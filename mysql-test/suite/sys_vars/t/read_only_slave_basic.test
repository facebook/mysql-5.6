SET @@global.read_only_slave = 0;
SET @@global.read_only_slave = DEFAULT;
SELECT @@global.read_only_slave;


SET @@global.read_only_slave = @start_value;
SELECT @@global.read_only_slave = TRUE;


SET @@global.read_only_slave = 0;
SELECT @@global.read_only_slave;
SET @@global.read_only_slave = 1;
SELECT @@global.read_only_slave;


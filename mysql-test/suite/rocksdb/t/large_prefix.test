--source include/have_rocksdb.inc

# skip rocksdb_large_prefix test for rocksdb DD
# RocksDB DD doesn't support rocksdb_large_prefix=0
--source include/not_rocksdb_dd.inc

#
# Test index prefix length limits.
#
set global rocksdb_large_prefix=0;

CREATE TABLE t1 (
  a BLOB(1024),
  PRIMARY KEY (a(767))
) ENGINE=rocksdb;
DROP TABLE t1;

--error ER_TOO_LONG_KEY
CREATE TABLE t1 (
  a BLOB(1024),
  PRIMARY KEY (a(768))
) ENGINE=rocksdb;

CREATE TABLE t1 (
  a BLOB(1024),
  KEY (a(767))
) ENGINE=rocksdb;
DROP TABLE t1;

# Should display warning
CREATE TABLE t1 (
  a BLOB(1024),
  KEY (a(768))
) ENGINE=rocksdb;
DROP TABLE t1;

set global rocksdb_large_prefix=DEFAULT;

# ADD COLUMN DECIMAL & DOUBLE
let $new_cols = 2;
let $instant_add_column = ALTER TABLE t1 ADD COLUMN i1 DECIMAL(5, 2), ADD COLUMN i2 double, ALGORITHM=INSTANT;

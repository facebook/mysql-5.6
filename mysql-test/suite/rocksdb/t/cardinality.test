let $save_rocksdb_seconds_between_stat_computes = `SELECT @@rocksdb_seconds_between_stat_computes`;
SET GLOBAL rocksdb_seconds_between_stat_computes=2;

--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

create table t1(
       id bigint not null primary key, 
       i1 bigint, #unique
       i2 bigint, #repeating
       c1 varchar(20), #unique
       c2 varchar(20) #repeating
) engine=rocksdb;
--disable_query_log
let $i=0;
while ($i<100000)
{
  inc $i;
  eval insert t1(id, i1, i2, c1, c2) values($i, $i, $i div 10, $i, $i div 10);
}
--enable_query_log

create index t1_1 on t1 (id, i1);
create index t1_2 on t1 (i1, i2);
create index t1_3 on t1 (i2, i1);
create index t1_4 on t1 (c1, c2);
create index t1_5 on t1 (c2, c1);

optimize table t1;
--source wait_stat_compute.inc

show index in t1;
SELECT table_name, data_length, index_length, table_rows FROM information_schema.tables WHERE table_schema = DATABASE();

# Do a bunch of updates
update t1 set i1=i1+1;
--source wait_stat_compute.inc 

show index in t1;
SELECT table_name, data_length, index_length, table_rows FROM information_schema.tables WHERE table_schema = DATABASE();

# Do a bunch of deletes
delete from t1 where i1%2 =0;
--source wait_stat_compute.inc

show index in t1;
SELECT table_name, data_length, index_length, table_rows FROM information_schema.tables WHERE table_schema = DATABASE();

optimize table t1;
--source wait_stat_compute.inc

show index in t1;
SELECT table_name, data_length, index_length, table_rows FROM information_schema.tables WHERE table_schema = DATABASE();

--echo restarting...
--source include/restart_mysqld.inc

show index in t1;
SELECT table_name, data_length, index_length, table_rows FROM information_schema.tables WHERE table_schema = DATABASE();

drop table t1;

eval SET GLOBAL rocksdb_seconds_between_stat_computes = $save_rocksdb_seconds_between_stat_computes;

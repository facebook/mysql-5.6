# Checks if the slave stops executing transactions when master's binlog format
# is STATEMENT but idempotent recovery is enabled
-- source include/have_gtid.inc
-- source include/master-slave.inc
-- source include/have_slave_use_idempotent_for_recovery.inc

call mtr.add_suppression("Master's binlog format is not ROW");

# raft combination enables dependency replication, but this test is not feasible
# for dependency replication
--disable_result_log
--disable_query_log
connection slave;
if (`SELECT @@GLOBAL.mts_dependency_replication != 'NONE'`)
{
  set @save.mts_dependency_replication= @@global.mts_dependency_replication;
  set global mts_dependency_replication= NONE;
  let $restore_mts_dep_repl= 1;
}
--enable_result_log
--enable_query_log

connection master;
create table t1(a int);
set session binlog_format=STATEMENT;
insert into t1 values(1);

# Wait till we hit the binlog format mismatch error
connection slave;
let $slave_sql_errno= convert_error(ER_MTS_INCONSISTENT_DATA); # 1756
let $show_slave_sql_error= 1;
source include/wait_for_slave_sql_error.inc;

# Print table
connection slave;
echo "Table after error";
select * from t1;

connection slave;
# Turn off idempotent recovery and start the slave again
set global slave_use_idempotent_for_recovery=no;
source include/start_slave.inc;

connection slave;
source include/sync_slave_sql_with_master.inc;

connection slave;
# Print table again
echo "Table after error fixed";
select * from t1;

# Cleanup
connection master;
drop table t1;
sync_slave_with_master;

connection slave;
set global slave_use_idempotent_for_recovery=yes;

# restore mts dep repl if needed
--disable_result_log
--disable_query_log
if ($restore_mts_dep_repl)
{
  set @@global.mts_dependency_replication= @save.mts_dependency_replication;
}
--enable_result_log
--enable_query_log

-- source include/rpl_end.inc

--let $num_transactions = 0
--let $kill_db_after = 10
--let $num_records = 1000
--let $max_rows = 4096

CREATE TABLE t1(id INT AUTO_INCREMENT PRIMARY KEY,
                msg_prefix VARCHAR(255),
                msg longtext,
                msg_length int,
                msg_checksum varchar(128),
                KEY msg_i(msg_prefix))
ENGINE=INNODB
ROW_FORMAT=COMPRESSED
COMPRESSION=ZLIB
COMPRESSION_LEVEL=6
COMPACT_METADATA=0
KEY_BLOCK_SIZE=1;


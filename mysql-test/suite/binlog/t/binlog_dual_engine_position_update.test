--let $RDB_BINLOG_OFFSET_BEFORE_VALUE=`SELECT '$RDB_BINLOG_OFFSET_BEFORE'`

--replace_regex /\n/<EOL>/ /.*<EOL>BINLOG OFFSET[[:space:]]*([0-9]+)<EOL>.*/\1/

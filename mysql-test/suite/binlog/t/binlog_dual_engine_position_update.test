FLUSH LOGS;

--echo Test Case IV: getting innodb and rocksdb binlog position before trx...

--replace_regex /\n/<EOL>/ /.*<EOL>BINLOG OFFSET[[:space:]]*([0-9]+)<EOL>.*/\1/
--let $INNODB_BINLOG_OFFSET_BEFORE= `SHOW ENGINE INNODB STATUS`

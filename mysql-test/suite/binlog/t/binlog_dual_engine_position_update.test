#--source include/assert.inc
--let $assert_text= RocksDB binlog file should've been updated
--let $assert_cond= "$RDB_BINLOG_FILE_AFTER_VALUE" = "$INNODB_BINLOG_FILE_AFTER_VALUE"
#--source include/assert.inc


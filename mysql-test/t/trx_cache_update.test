--source include/have_innodb.inc

CREATE TABLE t (a INT, PRIMARY KEY (a)) ENGINE=InnoDB;
INSERT INTO t VALUES (0), (2), (6), (10), (14), (18), (22);

START TRANSACTION;

sleep 0.11; # make trx cache updatable (see CACHE_MIN_IDLE_TIME_US)

# populate the cache (empty)
SELECT lock_table, COUNT(*) FROM INFORMATION_SCHEMA.INNODB_LOCKS
GROUP BY lock_table;

--echo # con1
connect(con1,localhost,root,,);
START TRANSACTION;

--echo # default connection
connection default;
UPDATE t SET a = 16 WHERE a = 0;

--echo # con1
connection con1;
UPDATE t SET a = 8 WHERE a = 22;

select a from t order by a;

let $id_1= `SELECT CONNECTION_ID()`;
SEND;
UPDATE t SET a = 12 WHERE a = 0;

--echo # default connection
connection default;
let $wait_timeout= 2;
let $wait_condition= SELECT 1 FROM INFORMATION_SCHEMA.PROCESSLIST
WHERE ID = $id_1 AND STATE = 'updating';
--source include/wait_condition.inc
--sorted_result

sleep 0.11; # make trx cache updatable (see CACHE_MIN_IDLE_TIME_US)

SELECT lock_table, COUNT(*) FROM INFORMATION_SCHEMA.INNODB_LOCKS
GROUP BY lock_table;

select a from t order by a;

--error ER_LOCK_DEADLOCK
UPDATE t SET a = 4 WHERE a = 22;

--echo # con1
connection con1;
REAP;
ROLLBACK;
disconnect con1;

--echo # default connection
connection default;
DROP TABLE t;

#!/bin/bash
$MYSQL_BINLOG $mysqlbinlog_reconnect_options  master-bin.100001 > /dev/null 2>$MYSQL_TMP_DIR/semisync.err 
rc=$?
if [[ $rc == 1 ]]; then
  cat $MYSQL_TMP_DIR/semisync.err | grep ERROR
  exit 0
fi
exit 1
EOF

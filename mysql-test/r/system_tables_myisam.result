SELECT table_name FROM system_tables WHERE id = i INTO @table_name;
SELECT @table_name;
SET @sql_text = concat("ALTER TABLE ", @table_name, " ENGINE = MyISAM");
PREPARE stmt FROM @sql_text;
EXECUTE stmt;
DEALLOCATE PREPARE stmt;
SET i = i + 1;
END WHILE;
END$

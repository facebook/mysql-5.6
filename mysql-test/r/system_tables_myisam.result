DECLARE CONTINUE HANDLER FOR 1726, 1071, 1148
BEGIN
GET DIAGNOSTICS CONDITION 1 @message = MESSAGE_TEXT;
SELECT @message AS ERROR;
END;
SELECT count(*) FROM system_tables INTO n;
